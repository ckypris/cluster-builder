{
  "variables": 
  {
    "rhel_folder": "",
    "rhel_lic": ""
  },
  "provisioners": [
    {
    "type": "file",
    "source": "../clusters/{{user `rhel_folder`}}/rhel7-setup.sh",
    "destination": "/tmp/rhel7-setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "sh '{{ .Path }}'",
      "inline": ["sudo bash /tmp/rhel7-setup.sh {{user `rhel_lic`}}"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/ansible.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/vmware-tools.sh"
    },
    {
      "type": "file",
      "source": "keys/authorized_keys",
      "destination": "/tmp/authorized_keys"
    },     
    {
      "type": "ansible-local",
      "playbook_file": "ansible/rhel.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvvv"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": ["reboot"]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/docker.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvvv"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/zerodisk.sh"
    }
  ],

  "post-processors": [{
      "type": "shell-local",
      "inline": [
        "vmware-vdiskmanager -c -t 0 -s 250GB -a scsi output_rhel7_vmx/docker-disk.vmdk"
      ]
    },
    {
      "type": "shell-local",
      "inline": ["echo 'scsi0:1.present = \"TRUE\"' >> output_rhel7_vmx/cluster-node-rhel7-x86_64.vmx "]
    },
    {
      "type": "shell-local",
      "inline": ["echo 'scsi0:1.fileName = \"docker-disk.vmdk\"' >> output_rhel7_vmx/cluster-node-rhel7-x86_64.vmx "]
    },
    {
      "type": "shell-local",
      "inline": [
          "ovftool --overwrite output_rhel7_vmx/cluster-node-rhel7-x86_64.vmx output_ovas/cluster-node-rhel7-x86_64.ova"
      ]
  }],
 
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-rhel.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 256000,
      "guest_os_type": "rhel7-64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "/root/Documents/rhel-server-7.4-x86_64-dvd.iso",
        "iso/rhel-server-7.4-x86_64-dvd.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "431a58c8c0351803a608ffa56948c5a7861876f78ccbe784724dd8c987ff7000",
      "ssh_username": "admin",
      "ssh_password": "TempPass2017",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'TempPass2017'|sudo -S /sbin/halt -h -p",
      "output_directory": "output_rhel7_vmx",
      "vmx_template_path": "cluster-node-template.vmx",
      "vm_name": "cluster-node-rhel7-x86_64",
      "format": "ova",
      "vmx_data": {
        "memsize": "1536",
        "numvcpus": "2",
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      }
    }
  ]
}