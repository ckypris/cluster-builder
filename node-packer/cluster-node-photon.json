{
  "provisioners": [
    {
      "type": "file",
      "source": "keys/authorized_keys",
      "destination": "/tmp/authorized_keys"
    },     
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "script": "bin/photon-setup.sh"
    },     
    {
      "type": "ansible-local",
      "playbook_file": "ansible/photon.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvvv"
    }   
  ],

  "post-processors": [{
      "type": "shell-local",
      "inline": [
          "ovftool --overwrite output_photon_vmx/cluster-node-photon-x86_64.vmx output_ovas/cluster-node-photon-x86_64.ova"
      ]
  }],
 
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-photon.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 256000,
      "guest_os_type": "other3xlinux-64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/photon-2.0-304b817.iso",
        "http://dl.bintray.com/vmware/photon/2.0/GA/iso/photon-2.0-304b817.iso"
      ],
      "iso_checksum_type": "sha1",
      "iso_checksum": "4a9ec286a595aeb744dd6fdf25a4ed7a8a3769cf",
      "ssh_username": "root",
      "ssh_password": "TempPass2017",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sed -i '/PermitRootLogin/ s/yes/prohibit-password/' /etc/ssh/sshd_config && /sbin/halt -h -p",
      "output_directory": "output_photon_vmx",
      "vmx_template_path": "cluster-node-template.vmx",
      "vm_name": "cluster-node-photon-x86_64",
      "format": "ova",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "2"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged",
        "ethernet1.connectionType": "bridged",
        "ethernet1.linkStatePropagation.enable": "FALSE",
        "ethernet1.pciSlotNumber": "160",
        "ethernet1.present": "TRUE",
        "ethernet1.virtualDev": "vmxnet3",
        "ethernet1.wakeOnPcktRcv": "FALSE",
        "ethernet1.addressType": "generated",
        "ethernet1.uptCompatibility": "TRUE",
        "ethernet1.generatedAddressOffset": "10"        
      }
    }
  ]
}