{
  "provisioners": [
    {
      "type": "file",
      "source": "keys/authorized_keys",
      "destination": "/tmp/authorized_keys"
    },     
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/atomic-setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": ["rpm-ostree pkg-add open-vm-tools"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": ["reboot"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": ["systemctl enable vmtoolsd"]
    }
  ],

  "post-processors": [{
      "type": "shell-local",
      "inline": [
          "ovftool --overwrite output_atomic7_vmx/cluster-node-atomic7-x86_64.vmx output_ovas/cluster-node-atomic7-x86_64.ova"
      ]
  }],
 
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-atomic.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 256000,
      "guest_os_type": "centos-64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/CentOS-Atomic-Host-7.1708-Installer.iso",
        "http://cloud.centos.org/centos/7/atomic/images/CentOS-Atomic-Host-7.1708-Installer.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "bf2a0cbf2e9042efacebc4e8277ec12957ac04fbcc2d2905d1e90c92709b4ebe",
      "ssh_username": "admin",
      "ssh_password": "TempPass2017",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'TempPass2017'|sudo -S /sbin/halt -h -p",
      "output_directory": "output_atomic7_vmx",
      "vmx_template_path": "cluster-node-template.vmx",
      "vm_name": "cluster-node-atomic7-x86_64",
      "format": "ova",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "2"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      }
    }
  ]
}