{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/ansible.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/vmware-tools.sh"
    },
    {
      "type": "file",
      "source": "keys/authorized_keys",
      "destination": "/tmp/authorized_keys"
    },     
    {
      "type": "ansible-local",
      "playbook_file": "ansible/targetd-server.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvvv"
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": true,
      "inline": ["reboot"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'TempPass2017' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "bin/zerodisk.sh"
    }
  ],

  "post-processors": [{
    "type": "shell-local",
    "inline": [
      "vmware-vdiskmanager -c -t 0 -s 1000GB -a scsi output_targetd-server_vmx/pv-disk.vmdk"
    ]
  },
  {
    "type": "shell-local",
    "inline": ["echo 'scsi0:1.present = \"TRUE\"' >> output_targetd-server_vmx/targetd-server-x86_64.vmx "]
  },
  {
    "type": "shell-local",
    "inline": ["echo 'scsi0:1.fileName = \"pv-disk.vmdk\"' >> output_targetd-server_vmx/targetd-server-x86_64.vmx "]
  },
  {
    "type": "shell-local",
    "inline": [
        "ovftool --overwrite output_targetd-server_vmx/targetd-server-x86_64.vmx output_ovas/targetd-server-x86_64.ova"
    ]
  }],
 
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-centos.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 256000,
      "guest_os_type": "centos-64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/CentOS-7-x86_64-Minimal-1810.iso",
        "http://mirrors.sonic.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "ssh_username": "admin",
      "ssh_password": "TempPass2017",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'TempPass2017'|sudo -S /sbin/halt -h -p",
      "output_directory": "output_targetd-server_vmx",
      "vmx_template_path": "cluster-node-template.vmx",
      "vm_name": "targetd-server-x86_64",
      "format": "ova",
      "vmx_data": {
        "memsize": "1536",
        "numvcpus": "2",
        "ethernet0.connectionType": "nat"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      }
    }
  ]
}