<?xml version="1.0" encoding="utf-8"?>
<service>
  <short>swarm-manager</short>
  <description>Ports for the Docker Swarm manager.</description>
  <!--  Port for the Docker Swarm manager. Used for backwards compatibility -->
  <port protocol="tcp" port="2375"/>
  <port protocol="tcp" port="2376"/>

  <!--  Port for communication between swarm nodes -->
  <port protocol="tcp" port="2377"/>
  <port protocol="tcp" port="2378"/>

  <!--  Port for overlay networking -->
  <port protocol="udp" port="4789"/>

  <!--  Port for gossip-based clustering -->
  <port protocol="udp" port="7946"/>
  <port protocol="tcp" port="7946"/>

  <!--  Port for a TLS proxy that provides access to UCP, Docker Engine, and Docker Swarm -->
  <port protocol="tcp" port="12376"/>

  <!-- Port for internal node configuration, cluster configuration, and HA -->
  <port protocol="tcp" port="12379"/>

  <!-- Port for internal node configuration, cluster configuration, and HA -->
  <port protocol="tcp" port="12380"/>

  <!-- Port for the certificate authority -->
  <port protocol="tcp" port="12381"/>

  <!-- Port for the UCP certificate authority -->
  <port protocol="tcp" port="12382"/>

  <!-- Port for the authentication storage backend -->
  <port protocol="tcp" port="12383"/>

  <!-- Port for the authentication storage backend for replication across managers -->
  <port protocol="tcp" port="12384"/>

  <!-- Port for the authentication service API -->
  <port protocol="tcp" port="12385"/>

  <!-- Port for the authentication worker -->
  <port protocol="tcp" port="12386"/>

  <!-- Port for the metrics service -->
  <port protocol="tcp" port="12387"/>

  <!-- Portainer Port -->
  <port protocol="tcp" port="9000"/>

  <!-- Node Exporter Port -->
  <port protocol="tcp" port="9100"/>

  <!-- cAdvisor Port -->
  <port protocol="tcp" port="9101"/>

  <!-- Docker Metrics Port -->
  <port protocol="tcp" port="9323"/>

</service>