cat > /etc/systemd/network/10-eth0-static-en.network << EOF
[Match]
Name=eth0*

[Network]
Address={{ hostvars[inventory_hostname]['ansible_host'] }}/24
Gateway={{ network_gateway }}
DNS={{ network_dns }}
DNS2={{ network_dns2 }}
DNS3={{ network_dns3 }}

[DHCP]
UseDNS=true
EOF

{% if esxi_data_net is defined %}   
cat > /etc/systemd/network/10-eth0-static-en.network << EOF
[Match]
Name=eth1*

[Network]
Address={{ hostvars[inventory_hostname]['ansible_host'] }}/24
Gateway={{ network_gateway }}
{% if data_network_dns is defined %}  
DNS={{ data_network_dns }}
{% endif %}
{% if data_network_dns2 is defined %}  
DNS2={{ data_network_dns2 }}
{% endif %}
{% if data_network_dns3 is defined %}  
DNS3={{ data_network_dns3 }}
{% endif %}

[DHCP]
UseDNS=true
EOF
{% endif %}



