
host {{ inventory_hostname }}-data {
    hardware ethernet {{ vm_data_mac.stdout }};
    fixed-address {{ data_host }};
    option host-name "{{ inventory_hostname }}-data";
    {% if data_network_dns is defined %}  
    option domain-name-servers {{ network_dns }}, 8.8.8.8;
    {% endif %}
    {% if data_network_dns2 is defined %}  
    option domain-name-servers {{ network_dns }}, {{ network_dns2 }};
    {% endif %}    
}
