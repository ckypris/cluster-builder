cat > /etc/sysconfig/network-scripts/ifcfg-ens33 << EOF
DEVICE="ens32"
ONBOOT="yes"
BOOTPROTO=static
IPADDR={{ ansible_host }}
NETMASK={{ network_mask }}
GATEWAY={{ network_gateway }}
DNS1={{ network_dns }}
DNS2={{ network_dns2 }}
DNS3={{ network_dns3 }}
DOMAIN={{ network_dn }}
EOF

cat > /etc/sysconfig/network << EOF
HOSTNAME={{ node_hostname }}.{{ network_dn }}
DNS1={{ network_dns }}
DNS2={{ network_dns2 }}
DNS3={{ network_dns3 }}
SEARCH={{ network_dn }}
DOMAIN={{ network_dn }}
EOF

cat > /etc/resolv.conf << EOF
nameserver {{ network_dns }}
nameserver {{ network_dns2 }}
nameserver {{ network_dns3 }}
search {{ network_dn }}
domain {{ network_dn }}
EOF

