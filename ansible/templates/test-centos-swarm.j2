#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

bash $DIR/docker-env info

PLATFORM=`uname -ra`
if [[ $PLATFORM == *"Darwin"* ]]; then 
  {% if docker_swarm_mgmt_gw is defined %}  
  open https://{{ docker_swarm_mgmt_gw }}:9000
  {% else %}
  open http://{{ inventory_hostname }}:9000
  {% endif %}
fi 

