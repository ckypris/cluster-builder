---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: {{ drupal_stack_name }}-service-ingress
  namespace: web
  annotations:
    kubernetes.io/ingress.class: "traefik"
    traefik.frontend.passHostHeader: "true"
spec:
  rules:
  - host: {{ drupal_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: {{ drupal_stack_name }}-drupal-service
          servicePort: 80